<link rel="stylesheet" href="/css/ConfigurarJuego.css">
@{
    ViewData["Title"] = "ConfigurarJuego";
}
<form action='@Url.Action("Comenzar")' method="get" style= "display: flex;justify-content: center; padding-top: 15px; flex-direction: column;">
        <h1 style="margin-bottom: 10px;">Configuracion</h1>
        <div class="formulario">
   
          <label class="form-label">Nombre de usuario</label>
          <input type="text" class="form-control" id="username" name="username" required style="margin-top:10px">

          <div>
           
            <select class="form-select" aria-label="Default select example" name="dificultad" required>
              <option selected>Dificultad</option>
                @foreach (var item in ViewBag.Dificultades)
              {
                <option value="@item.IdDificultad">@item.Nombre</option>
              }
              <option value="-1">Todas</option>
            </select>  


              <select class="form-select" aria-label="Default select example" name="categoria" required>
                <option selected>Categoria</option>
                @foreach (var item in ViewBag.Categorias)
                {
                  <option value="@item.IdCategoria">@item.Nombre</option>
                }
                <option value="-1">Todas</option>
    
                
              </select>
          </div>
          
     </div>
     
     <div style="width: 100%; display: flex; justify-content: center;">
     <input type="submit" value="Jugar" style="background-color: lightblue; color: black; padding: 10px 20px; font-size: 16px; border: none; border-radius: 4px; cursor: pointer;">
    </div>
    </form>
    @{
    ViewData["Title"] = "Juego";
   }
    
    <link rel="stylesheet" href="/css/Juego.css">
    <div class="nombrePuntaje">
        <h1>Nombre usuario: @ViewBag.Username</h1>
        <h1>Puntaje: @ViewBag.Puntaje</h1>
    </div>
    <h1 style="margin-bottom: 20px; margin-top: 20px;">Numero de preguntas correctas: @ViewBag.PreguntasCorrectas</h1>
    <div class="Enunciado">
        <h2>@ViewBag.Pregunta.Enunciado</h2>
    </div>
    <div class="Respuestas">
        @foreach (var resp in ViewBag.Respuesta)
        {
            <form action='@Url.Action("VerificarRespuesta")' method="post">
                <input type="hidden" name="idPregunta" value="@resp.IdPregunta">
                <input type="hidden" name="idRespuesta" value="@resp.IdRespuesta">
                <input type="submit" class="respuesta" value="@resp.Contenido">
            </form>
        }
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>

